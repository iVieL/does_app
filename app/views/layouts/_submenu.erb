<div class="sub-menu" id="sub-menu">
  <div id="sub-menu-opts" name="sub-menu-opts">
    <% str = opt.to_s %>
    <% if !opt.nil? and !str.blank? %>
      <nav>
        <ul>
          <% eval(str.gsub('&quot;', '\'')).each do |target| %>
            <li><%= link_to target[0], target[1] %></li>
          <% end %>
        </ul>
      </nav>
    <% end %>
  </div>
</div>
